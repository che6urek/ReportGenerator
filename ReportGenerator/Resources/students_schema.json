{
    "$schema": "http://json-schema.org/draft-07/schema",

    "definitions": {
      "id": {
        "type": "integer",
        "minimum": 0
      },
      "word": {
        "type": "string",
        "pattern": "^[A-Za-zА-Яа-я]+$"
      },
      "name": {
        "type": "string",
        "pattern": "^[A-Za-zА-Яа-я]+(([',. -])?[A-Za-zА-Яа-я]+)*$"
      }
  	},

    "type": "object",
    "required": [
        "universities",
        "faculties",
        "students"
    ],
    "properties": {
        "universities": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": { "$ref": "#/definitions/id" },
                    "name": { "$ref": "#/definitions/word" }
                }
            }
        },
        "faculties": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": { "$ref": "#/definitions/id" },
                    "name": { "$ref": "#/definitions/word" }
                }
            }
        },
        "students": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "id",
                    "firstName",
                    "lastName",
                    "universityId",
                    "facultyId"
                ],
                "properties": {
                    "id": { "$ref": "#/definitions/id" },
                    "firstName": { "$ref": "#/definitions/name" },
                    "lastName": { "$ref": "#/definitions/name" },
                    "universityId": { "$ref": "#/definitions/id" },
                    "facultyId": { "$ref": "#/definitions/id" }
                }
            }
        }
    }
}
